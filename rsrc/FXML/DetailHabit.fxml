<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="VBox" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">

    <HBox>
        <VBox>
            <ListView fx:id="tailles"/>
            <HBox>
                <ChoiceBox fx:id="choiceTaille"/>
                <Button text="ajouter" onAction="#ajouterTaille"/>
                <Button text="supprimer" onAction="#supprimerTaille"/>
            </HBox>
        </VBox>
        <VBox>
            <ListView fx:id="couleurs"/>
            <HBox>
                <ColorPicker fx:id="colorPicker"/>
                <Button text="ajouter" onAction="#ajouterCouleur"/>
                <Button text="supprimer" onAction="#supprimerCouleur"/>
            </HBox>
        </VBox>
    </HBox>

</fx:root>
